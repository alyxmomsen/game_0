{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2022" /* es6 */,
    "target": "ES2017" /* es5 */,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/types"],
    "lib": ["esnext", "DOM"],
    "resolveJsonModule": true,
    "strictNullChecks": true
  }
}
